<form>
<%= form_with model: @tweet, local: true do |f|%>
  <div class="field">
    <%= f.label :text, "tweet" %><br />
    <%= f.text_area :text, id:"tweet-text" %>
  </div>

  <div class="field">
    <%= f.label :image, "画像" %><br />
    <%= f.file_field :image, id:"tweet_image" %>
  </div>

  <div class="actions">
    <%= f.submit "保存する", class: :form__btn  %>
  </div>
<% end %>
</form>